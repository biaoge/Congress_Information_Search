<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/comm_fline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comm_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Committee ID"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:layout_weight="4"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:baselineAlignBottom="true"
            android:paddingTop="10dp"
            android:paddingRight="8dp"
            android:src="@drawable/forward"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/comm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comm_fline"
        android:text="Committee Name"
        android:textSize="13sp"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"
        />

    <TextView
        android:id="@+id/comm_chamber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comm_name"
        android:text="Committee Chamber"
        android:textSize="13sp"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"/>

</RelativeLayout>
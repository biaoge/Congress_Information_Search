<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">


    <LinearLayout
        android:id="@+id/comm_detail_fline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/comm_favicon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:src="@drawable/star48"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:scaleType="fitEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comm_detail_secline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/comm_detail_fline"
        android:layout_marginTop="16dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committee ID:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comm_detail_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="committee_id"
            android:textSize="20sp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="15dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@id/comm_detail_secline">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comm_detail_name"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comm_detail_thrline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/name_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chamber:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/comm_chamber_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/star"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:scaleType="fitEnd" />


        <TextView
            android:id="@+id/comm_detail_chamber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chamber"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comm_detail_fourline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/comm_detail_thrline"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent Committee:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comm_detial_parent_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="parent_committee"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comm_detail_fifline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/comm_detail_fourline"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comm_detail_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="telephone number"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comm_detail_sixline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/comm_detail_fifline"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comm_detail_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="office"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:gravity="right"/>
    </LinearLayout>




</RelativeLayout>